<div class= "col-lg-3">
  <h4><%= @user.name %></h4>
</div>
<div class="col-lg-12 chat-room">
  <div class="container messages">
    <div class="message-container message-container-<%= chat_room.uuid %>" data-user-pic-url="<%= @user.user_pic.url(:smallthumb) %>" data-chat-room-uuid= "<%= chat_room.uuid %>" >
      <% chat_room.messages.each do |message| %>
        <div class="col-lg-12 message-content">
          <% if message.user.id == current_user.id %>
            <div class="col-lg-12 message-content message-content-sender">
              <span class="send-message"><%= message.content %></span>
            </div>
          <% else %>
            <div class="col-lg-12 message-content message-content-receiver">
              <span><%= image_tag message.user.user_pic.url(:smallthumb), class: "img-circle" %></span>
              <span class="received-message"><%= message.content %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="is-typing is-typing-<%= chat_room.uuid %> row">
  </div>
  <textarea class="message-textarea" data-room-id="<%= @chat_room.id %>" data-behavior="room-speaker" data-room-uuid="<%= @chat_room.uuid %>" data-current-user-id="<%= current_user.id %>"></textarea>
</div>
